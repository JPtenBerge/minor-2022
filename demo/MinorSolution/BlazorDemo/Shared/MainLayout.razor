@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h3">Blazortraining</MudText>
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1" Variant=DrawerVariant.Temporary>
        <MudDrawerHeader>
            <MudText Typo="Typo.h4">Minorblazor</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="/">Kazen</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/muddy">MudBlazor</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/led">LED</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}
