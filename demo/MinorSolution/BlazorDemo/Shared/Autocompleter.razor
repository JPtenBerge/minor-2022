@using BlazorDemo.Entities
@typeparam T


@* Immediate = oninput instead of onchange *@
<MudTextField @bind-Value="Query"
              Immediate="true"
              OnKeyUp="HandleKeyUp" />

@if (Suggestions != null)
{
    <ul>
        @foreach (var suggestion in Suggestions)
        {
            @ItemTemplate(suggestion)
        }
    </ul>
}

